<div class="panel">
  <div class="panel-heading" role="tab" id="endorsement--heading-<%= endorsement.to_param %>">
    <a class="collapsed" role="button" data-toggle="collapse" data-parent="#endorsement_list" href="#collapse-endorsement-<%= endorsement.to_param %>" aria-expanded="false" aria-controls="collapse-endorsement-<%= endorsement.to_param %>">
      <% if endorsement.highlight %>*<% end %>
      <%= endorsement.candidate_name %>
      for
      <%= endorsement.jurisdiction %>
      <%= endorsement.office %>
    </a>
  </div>
  <div id="collapse-endorsement-<%= endorsement.to_param %>"  class="panel-collapse collapse" role="tabpanel" aria-labelledby="endorsement--heading-<%= endorsement.to_param %>">
    <div class="panel-body">
      <%= simple_format endorsement.explanation %>
      <% if endorsement_form %>
        <a class="collapsed" role="button" data-toggle="collapse" href="#collapse-endorsement-edit-<%= endorsement.to_param %>" aria-expanded="false" aria-controls="collapse-endorsement-edit-<%= endorsement.to_param %>">
          Edit
        </a>
      <% end %>

    </div>
  </div>
  <% if endorsement_form %>
    <div id="collapse-endorsement-edit-<%= endorsement.to_param %>"  class="panel-collapse collapse" role="tabpanel">
      <%= endorsement_form.hidden_field :id %>
      <%= render 'endorsements/form', f: endorsement_form %>
    </div>
  <% end %>
</div>
