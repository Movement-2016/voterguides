<style>
.panel-heading {
    background-color: #A7957A ;
}
.collapse.in {
    background-color: #DED7B5; 
    border-radius: 0 0 15px 15px;
}
.panel-group .panel {
    border-radius: 15px;
    margin-bottom: 6px;
}
</style>
<div class="panel">
  <div class="panel-heading" role="tab" id="endorsement--heading-<%= endorsement.to_param %>">
    <a class="collapsed" role="button" style="color:black;" data-toggle="collapse" href="#collapse-endorsement-<%= endorsement.to_param %>" aria-expanded="false" aria-controls="collapse-endorsement-<%= endorsement.to_param %>">
      <% if endorsement.highlight %>
        <span class="glyphicon glyphicon-star"></span>
      <% end %>
      <%= endorsement.presenter.summary_text %>
    </a>
  </div>
  <div id="collapse-endorsement-<%= endorsement.to_param %>"  class="panel-collapse collapse" role="tabpanel" aria-labelledby="endorsement--heading-<%= endorsement.to_param %>">
    <div class="panel-body">
      <%= simple_format endorsement.explanation %>
    </div>
  </div>
</div>
