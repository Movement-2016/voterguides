<%= form.error :base, :error_method => :to_sentence %>
<%= form.input :name, label: "* Guide Title (ok if it's funny, but make sure to include the name of your city)
"  %>
<%= form.input :target_city, label: "Guide City", placeholder: "Indianapolis" %>
<%= form.input :statewide, label: "Statewide Guide", hint:"Statewide guides will not be connected to a specific city" %>
<%= form.input :target_state, label: "Guide State", collection: GeographyPresenter::ELIGIBLE_STATES, include_blank: "Select State" %>
