<header class="localballot--header">
  <div class="container">
    <nav class="navbar theballot--navbar">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header visible-sm-block visible-md-block visible-lg-block" >
          <button type="button" class="navbar-toggle theballot--navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, class: "navbar--logo" do %>
  <!-- <img src="assets/localballot/logo.png" width="220px" height="50px"> -->

          <% end %>
        </div>
        <div class="collapse navbar-collapse theballot--navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right" style="margin-right:20px;"> 
            <li><%= link_to "Create a Guide", new_voter_guide_path, class: 'user_nav--item' %></li>
