              <li><%= link_to current_user.name, account_path(current_user), class: 'user_nav--item' %></li>
              <li><%= link_to "Log out", logout_path, class: 'user_nav--item' %></li>
            <% else %>
              <li><%= link_to "Log in  |  Sign Up", new_session_path, class: 'user_nav--item' %></li>

   
              <li><div class= "leaguelogo"></div> </li>
            <% end %>


          </ul>
        </div>
      </div>
