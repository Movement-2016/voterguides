<div class="localballot--header--top_stripes ">&nbsp;</div>
<header class="localballot--header">
  <div class="container">
    <nav class="navbar theballot--navbar">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle theballot--navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="logo-tick pull-left"></div>
          <%= link_to root_path, class: "navbar--logo" do %>
            localballot.us
          <% end %>
        </div>
        <div class="collapse navbar-collapse theballot--navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right" style="margin-right:20px;"> 
            <li><%= link_to "Create a Guide", new_voter_guide_path, class: 'user_nav--item' %></li>
            <% if current_user %>
              <li><%= link_to current_user.name, account_path(current_user), class: 'user_nav--item' %></li>
              <li><%= link_to "Log out", logout_path, class: 'user_nav--item' %></li>
            <% else %>
              <li><%= link_to "Log in  |  Sign Up", new_session_path, class: 'user_nav--item' %></li>

   
              <li><div class= "leaguelogo"></div> </li>
            <% end %>


          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
<div class="localballot--header--bottom_stripes"></div>
<div class="localballot--header--bottom_stripes"></div>
