<style>
.fixed-box{
padding:1%;
margin:18px;
box-shadow:0px 0px 5px #727272;
background-color:#DED7B5; //#A7957A;
width:30%;
float:left;
}
.media-left, .media-right, .media-body{
display:inherit;
}
.first-box{
background-color:#A7957A;
}
.league-icon { 
    background-size: cover;
    border-radius: 6px;
    height: 100px;
    margin-left: -14px;
    width: 100px;
} 
.media-right, .media > .pull-right {
    padding-left: 0px;
}
.underline {
    border-bottom: 3px solid #A7957A; 
  font-size:14px;
  font-weight:bold;
}
.endorsement{
color:#756348; 
}
/*.container {
    width: 1334px;
}*/
.highlight-block {
    background-color: #E9E0C2;
    margin-bottom: 20px;
    padding: 10px;
    text-align: left;
}
</style>

<div class="highlight-block">
  <h2>Voter Guides</h2>
  <div class="offset-list">
    <% if @voter_guides.empty? %>
      <p>No voter guides found for <%= params[:id] %></p>
    <% else %>
      <% @voter_guides.each do |voter_guide| %>
        <%= render 'voter_guides/list_info', voter_guide: voter_guide %>
      <% end %>
      <%= paginate @voter_guides %>
    <% end %>
  </div>
</div>
